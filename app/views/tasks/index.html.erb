<div class="text-center">
  <h3 class="btn btn-info"><%= link_to 'Add a TASK', new_task_path %></h3>
</div>

<div class="wrapper-card">
  <ul>
    <% @tasks.each do |t| %>
      <li class="card">
        <span class="title"><%= link_to t.title, task_path(t) %></span>
        <span class="suppr"><%= link_to raw('<i class="fa fa-times" aria-hidden="true"></i>'), task_path(t), method: :delete, data: { confirm: "Are you sure?" } %></span>
        <span class="update"><%= link_to'Edit', edit_task_url(t)%></span>
      </li>
    <% end %>
  </ul>
</div>
